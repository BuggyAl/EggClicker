on damage:
	victim's world = "eggnet-clicker":
		damage cause is not fire:
			if "%region at victim%" does not contain "sumo2":
				cancel event
			else:
				set health of victim to 10
		else:
			cancel event
			extinguish the victim

on offhand switch:
	cancel event
	make player say "/shop"

on death:
	if "%region at player%" contains "sumo2":
		set health of player to 10
		set {_loc} to location of player
		wait 1 tick
		teleport player to {_loc}
		extinguish the victim
		
command /setprestige [<integer>] [<offline player>]:
	permission: op
	trigger:
		if arg-1 is set:
			if arg-2 is set:
				set {prestiges::%arg-2's uuid%} to arg-1
				send "&aDone!" to player
				send "&aYour prestige has been modified by an staff member!" to arg-2
			else:
				set {prestiges::%player's uuid%} to arg-1
				send "&aDone!"
		else:
			send "&cPlease enter a prestige amount!"


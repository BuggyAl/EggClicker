command /setsuffix <offline player> [<text>]:
	permission: op
	trigger:
		if arg-1 is set:
			set {suffix::%arg-1's uuid%} to "&f%colored arg-2%"
			send "&e%arg-1%&e's &asuffix has been set to %{suffix::%arg-1's uuid%}%&a!"			
		else:
			set {suffix::%player's uuid%} to "&f%colored arg-2%"
			send "&aYour suffix has been set to %{suffix::%player's uuid%}%&a!"
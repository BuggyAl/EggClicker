on inventory click:
	if event-inventory = (metadata tag "tokenShop" of player):
		cancel event

		if index of event-slot is 11:
			if {tokenshop::1::%player's uuid%} is true:
				set {suffix::%player's uuid%} to "&7[&eChicken&7]"
				send "&aYour suffix has been set to &7[&eChicken&7]&a!"
			else:
				if {tokens::%player's uuid%} is less than 300:
					send "&cYou do not have enough tokens to purchase this! &7&o(%getNumberFormatted(round({tokens::%player's uuid%}))%&7&o/300)"
				else:
					set {tokenshop::1::%player's uuid%} to true		
					remove 300 from {tokens::%player's uuid%}	
